

<%= form_for @post do |f| %>
    <div>
      <%= f.label :title %>
      <br />
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area(
        :body,
        cols:50,
        rows:5,
        placeholder:"Whatchu thinkin bout, Willis?",
        class: "form-control"
    ) %>

</div>
    <%= f.submit class: "btn btn-outline-primary" %>
  <% end %>